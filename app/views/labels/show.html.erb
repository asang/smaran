<h2 class="page-heading">Accounts belonging to <%= @label.name %></h2>
<p id="notice"><%= notice %></p>
<% if not @label.errors.nil? and @label.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@label.errors.count, "error") %> prohibited this label from being saved/updated:</h2>
      <ul>
        <% @label.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<p>
  <b>Name:</b>
  <%= @label.name %>
</p>
<p>
  <b>Description:</b>
  <%= @label.description %>
</p>
<p>
  <b>Accounts:</b>
  <%= render 'share/list', :list => @label.sorted_accounts %>
</p>

<%= link_to 'Edit', edit_label_path(@label), class: 'btn btn-primary btn-sm' %>
<%= link_to 'Back', :back, class: 'btn btn-default btn-sm' %>
<%= link_to "Remove", @label,
      data: { confirm: "Are you sure you want to delete #{@label.name}?" },
      :method => :delete, class: 'btn btn-danger btn-sm' %>
